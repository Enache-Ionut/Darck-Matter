            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBph4ZtJpF5M0Jl53MwdwvZytqGzauEf1M&callback=initMap">
    </script>
    <script>
        function initMap() {
            var uluru = { lat: -25.344, lng: 131.036 };
            var map = new google.maps.Map(
                document.getElementById('map'), { zoom: 4, center: uluru, disableDefaultUI: true });
            var marker = new google.maps.Marker({ position: uluru, map: map });
        }
    </script>
